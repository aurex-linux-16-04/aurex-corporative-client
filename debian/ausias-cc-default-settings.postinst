#!/bin/sh -e

case "$1" in
    configure)
	# netadmins sudo
	cp /usr/share/ausias-cc-default-settings/20_netadmins /etc/sudoers.d/
        chmod 0440 /etc/sudoers.d/20_netadmins

	## generate /var/lib/ausias-cc-default-settings/ldap-auth.cfg, just a cp at this moment ...
	#cp /usr/share/ausias-cc-default-settings/ldap-auth.cfg /var/lib/ausias-cc-default-settings/ldap-auth.cfg
	aurex-transmute --module=ausias-cc transmute || true
	#/usr/share/aurex-cc-auth/aurex-ldap-auth-config configure || true
	aurex-cc-sssd-settings update || true
	# aurex-cc-mount-settings update || true
	[ ! -x /usr/lib/lightdm/lightdm-set-defaults ] || /usr/lib/lightdm/lightdm-set-defaults -i true || true
	systemd-mount-tool postinst /usr/share/ausias-cc-default-settings/systemd || true
	;;
    abort-upgrade|abort-remove|abort-deconfigure)
    	;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

